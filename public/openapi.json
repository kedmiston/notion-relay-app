{
  "openapi": "3.0.1",
  "info": {
    "title": "Notion Relay API",
    "version": "1.0.0",
    "description": "Relay server for querying Notion leadership databases."
  },
  "servers": [
    {
      "url": "https://notion-relay-app.onrender.com"
    }
  ],
  "paths": {
    "/list-databases": {
      "get": {
        "operationId": "listDatabases",
        "summary": "List all accessible Notion databases",
        "description": "Retrieve all Notion databases available to the integration.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful list of databases.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "databases": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "title": { "type": "string" },
                          "url": { "type": "string" }
                        },
                        "required": ["id", "title", "url"]
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "x-openai-isUserAuthenticated": false,
        "x-openai-api-operations": [
          {
            "operationType": "list",
            "entityType": "database",
            "description": "Lists all accessible databases in the Notion workspace."
          }
        ]
      }
    }
  }
}
