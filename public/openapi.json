{
  "openapi": "3.0.1",
  "info": {
    "title": "Notion Relay API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://notion-relay-app.onrender.com"
    }
  ],
  "paths": {
    "/list-databases": {
      "get": {
        "operationId": "listDatabases",
        "summary": "List all Notion databases",
        "description": "Retrieves a list of all databases accessible by the Notion integration.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response with a list of databases",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "databases": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "title": { "type": "string" },
                          "url": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "x-openai-isUserAuthenticated": false
      }
    }
  }
}
